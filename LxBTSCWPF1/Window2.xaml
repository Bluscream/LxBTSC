<Window x:Class="LxBTSCWPF1.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LxBTSCWPF1"
        mc:Ignorable="d"
        Title="LxBTSC" Height="500" Width="450" Closed="Window_Closed" Closing="Window_Closing" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="24"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" x:Name="serverTabControl" SelectedItem="{Binding CurrentServerTab, Mode=TwoWay}" ItemsSource="{Binding ServerTabs2}"/>

        <Grid Grid.Row="1">
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="35"/>
            </Grid.ColumnDefinitions>-->
            <TextBox Grid.Column="0" Text="{Binding ChatboxText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PreviewKeyDown="TextBox_PreviewKeyDown" TextWrapping="Wrap" MaxLength="1024" MaxLines="8" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto"/>
            <!--<Button Grid.Column="1" Content="Send" Click="Button_Click_1"/>-->
        </Grid>
    </Grid>
</Window>
